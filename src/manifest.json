{
  "manifest_version": 3,
  "name": "Codeforces Problem of the Day",
  "version": "1.0",
  "description": "Adds a daily problem tab to Codeforces, similar to LeetCode POTD.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://codeforces.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://codeforces.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
